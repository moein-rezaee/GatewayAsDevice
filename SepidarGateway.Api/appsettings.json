{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Gateway": {
    "UseHttpsRedirection": false,
    "Swagger": {
      "RoutePrefix": "swagger",
      "DocumentTitle": "Sepidar Gateway",
      "GeneratorPath": "/swagger/docs"
    },
    "Health": {
      "Path": "/health"
    }
  },
  "Sepidar": {
    "BaseUrl": "http://localhost:6000",
    "RegisterDevice": {
      "Endpoint": "/api/Devices/Register",
      "IntegrationIdLength": 4
    }
  }
}
